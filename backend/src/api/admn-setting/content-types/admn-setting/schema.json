{
  "kind": "singleType",
  "collectionName": "admn_settings",
  "info": {
    "name": "admn-setting",
    "singularName": "admn-setting",
    "pluralName": "admn-settings",
    "displayName": "Admin Settings"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "paymentSystemType": {
      "type": "enumeration",
      "enum": [
        "float_based",
        "subscription_based",
        "hybrid"
      ],
      "default": "float_based"
    },
    "floatSystemEnabled": {
      "type": "boolean",
      "default": true
    },
    "subscriptionSystemEnabled": {
      "type": "boolean",
      "default": false
    },
    "freeTrialEnabled": {
      "type": "boolean",
      "default": false
    },
    "defaultFreeTrialDays": {
      "type": "integer",
      "default": 7
    },
    "allowMultipleTrials": {
      "type": "boolean",
      "default": false
    },
    "subscriptionGracePeriodDays": {
      "type": "integer",
      "default": 3
    },
    "autoRenewByDefault": {
      "type": "boolean",
      "default": true
    },
    "maxSimultaneousDriverRequests": {
      "type": "integer",
      "default": 1
    },
    "rideRequestTimeoutSeconds": {
      "type": "integer",
      "default": 30
    },
    "driverCancellationCooldownMinutes": {
      "type": "integer",
      "default": 15
    },
    "minimumFloatTopup": {
      "type": "decimal",
      "default": 10
    },
    "maximumFloatTopup": {
      "type": "decimal",
      "default": 1000
    },
    "allowNegativeFloat": {
      "type": "boolean",
      "default": false
    },
    "negativeFloatLimit": {
      "type": "decimal",
      "default": 0
    },
    "blockCashRidesOnInsufficientFloat": {
      "type": "boolean",
      "default": true
    },
    "commissionType": {
      "type": "enumeration",
      "enum": [
        "percentage",
        "flat_rate",
        "tiered"
      ],
      "default": "percentage"
    },
    "defaultCommissionPercentage": {
      "type": "decimal",
      "default": 15
    },
    "defaultFlatCommission": {
      "type": "decimal"
    },
    "minimumCommission": {
      "type": "decimal"
    },
    "maximumCommission": {
      "type": "decimal"
    },
    "tieredCommissionEnabled": {
      "type": "boolean",
      "default": false
    },
    "commissionTiers": {
      "type": "json",
      "default": []
    },
    "affiliateSystemEnabled": {
      "type": "boolean",
      "default": true
    },
    "pointsPerRiderReferral": {
      "type": "integer",
      "default": 10
    },
    "pointsPerDriverReferral": {
      "type": "integer",
      "default": 50
    },
    "pointsPerRiderFirstRide": {
      "type": "integer",
      "default": 20
    },
    "moneyPerPoint": {
      "type": "decimal",
      "default": 0.1
    },
    "minimumPointsForRedemption": {
      "type": "integer",
      "default": 100
    },
    "referralBonusEnabled": {
      "type": "boolean",
      "default": true
    },
    "driverOrderRequestRingtone": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "audios"
      ]
    },
    "driverOrderRequestVibration": {
      "type": "boolean",
      "default": true
    },
    "rideCompletionProximity": {
      "type": "integer",
      "default": 100
    },
    "allowManualCompletion": {
      "type": "boolean",
      "default": false
    },
    "requireArrivalConfirmation": {
      "type": "boolean",
      "default": true
    },
    "requireDriverLicense": {
      "type": "boolean",
      "default": true
    },
    "requireNationalId": {
      "type": "boolean",
      "default": true
    },
    "requireProofOfAddress": {
      "type": "boolean",
      "default": true
    },
    "requireInsurance": {
      "type": "boolean",
      "default": true
    },
    "requireRoadTax": {
      "type": "boolean",
      "default": true
    },
    "requireFitnessDocument": {
      "type": "boolean",
      "default": true
    },
    "targetRidesForUnlock": {
      "type": "integer",
      "default": 1000
    },
    "smsEnabled": {
      "type": "boolean",
      "default": true
    },
    "emailEnabled": {
      "type": "boolean",
      "default": false
    },
    "pushNotificationsEnabled": {
      "type": "boolean",
      "default": true
    },
    "whatsappEnabled": {
      "type": "boolean",
      "default": false
    },
    "cashEnabled": {
      "type": "boolean",
      "default": true
    },
    "okrapayEnabled": {
      "type": "boolean",
      "default": true
    },
    "defaultCurrency": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::currency.currency"
    },
    "platformName": {
      "type": "string",
      "default": "Okra Rides"
    },
    "supportEmail": {
      "type": "email"
    },
    "supportPhone": {
      "type": "string"
    }
  }
}
