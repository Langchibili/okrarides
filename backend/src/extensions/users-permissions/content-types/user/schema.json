{
  "kind": "collectionType",
  "collectionName": "up_users",
  "info": {
    "name": "user",
    "singularName": "user",
    "pluralName": "users",
    "displayName": "User",
    "description": "Extended user with multi-profile system"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {
    "content-manager": {
      "visible": true
    },
    "content-type-builder": {
      "visible": true
    }
  },
  "attributes": {
    "username": {
      "type": "string",
      "minLength": 3,
      "required": true,
      "unique": true
    },
    "email": {
      "type": "email",
      "required": true,
      "minLength": 6,
      "unique": true
    },
    "provider": {
      "type": "string"
    },
    "password": {
      "type": "password",
      "private": true,
      "minLength": 6
    },
    "resetPasswordToken": {
      "type": "string",
      "private": true
    },
    "confirmationToken": {
      "type": "string",
      "private": true
    },
    "confirmed": {
      "type": "boolean",
      "default": false
    },
    "blocked": {
      "type": "boolean",
      "default": false
    },
    "role": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.role"
    },
    "phoneNumber": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "phoneVerified": {
      "type": "boolean",
      "default": false
    },
    "firstName": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    },
    "dateOfBirth": {
      "type": "date"
    },
    "gender": {
      "type": "enumeration",
      "enum": [
        "male",
        "female",
        "other",
        "prefer_not_to_say"
      ]
    },
    "profilePicture": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "riderProfile": {
      "type": "component",
      "component": "rider-profiles.rider-profile",
      "repeatable": false
    },
    "driverProfile": {
      "type": "component",
      "component": "driver-profiles.driver-profile",
      "repeatable": false
    },
    "deliveryProfile": {
      "type": "component",
      "component": "delivery-profiles.delivery-profile",
      "repeatable": false
    },
    "conductorProfile": {
      "type": "component",
      "component": "conductor-profiles.conductor-profile",
      "repeatable": false
    },
    "affiliateProfile": {
      "type": "component",
      "component": "affiliate.affiliate-profile",
      "repeatable": false,
      "required": true
    },
    "referredBy": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "adminType": {
      "type": "enumeration",
      "default": "noRole",
      "enum": [
        "noRole",
        "super_admin",
        "manager",
        "fleet_owner",
        "support",
        "finance"
      ]
    },
    "currentLocation": {
      "type": "json"
    },
    "address": {
      "type": "text"
    },
    "isOnline": {
      "type": "boolean",
      "default": false
    },
    "lastSeen": {
      "type": "datetime"
    },
    "deviceToken": {
      "type": "string"
    },
    "activeProfile": {
      "type": "enumeration",
      "default": "none",
      "enum": [
        "none",
        "rider",
        "driver",
        "delivery",
        "conductor"
      ]
    },
    "profileActivityStatus": {
      "type": "json",
      "default": {
        "rider": false,
        "driver": false,
        "delivery": false,
        "conductor": false
      }
    },
    "refreshToken": {
      "type": "string",
      "private": true
    },
    "refreshTokenExpiry": {
      "type": "datetime"
    },
    "sessionExpiry": {
      "type": "datetime"
    },
    "favoriteLocations": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::favorite-location.favorite-location",
      "mappedBy": "user"
    },
    "emergencyContacts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::emergency-contact.emergency-contact",
      "mappedBy": "user"
    },
    "deletedAt": {
      "type": "datetime"
    },
    "profileIds": {
      "type": "json"
    },
    "country": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::country.country"
    },
    "devices": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::device.device",
      "mappedBy": "user"
    }
  }
}
